{
  "name": "my-ssh-client",
  "version": "1.0.0",
  "description": "Simple SSH Client with Beautiful UI",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start:legacy": "electron .",
    "build:legacy": "electron-builder --win portable",
    "build:install": "electron-builder --win nsis",
    "build:copy-extra": "node -e \"require('fs').mkdirSync('out/main/src',{recursive:true});require('fs').copyFileSync('src/crypto.js','out/main/src/crypto.js')\"",
    "build:publish": "electron-vite build && npm run build:copy-extra && electron-builder --win --publish always",
    "build:nsis": "electron-vite build && npm run build:copy-extra && electron-builder --win nsis",
    "build:portable": "electron-vite build && npm run build:copy-extra && electron-builder --win portable",
    "build:all": "electron-vite build && npm run build:copy-extra && electron-builder --win nsis --win portable",
    "typecheck": "tsc --noEmit"
  },
  "author": "SungKwan",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@xterm/addon-canvas": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.31.0",
    "fuse.js": "^7.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "zustand": "^5.0.11"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "ssh2": "^1.15.0"
  },
  "build": {
    "appId": "com.sungkwan.ssh-client",
    "productName": "My SSH Client",
    "files": [
      "out/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "My SSH Client"
    },
    "portable": {
      "artifactName": "MySSHClient-${version}-portable.exe"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "world-goes-to-hell",
        "repo": "my-ssh-client",
        "releaseType": "release"
      }
    ]
  }
}
